<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modelo190" Height="350" Width="525">
    <Grid>              
        <DockPanel Margin="10">
            <WrapPanel HorizontalAlignment="Center" DockPanel.Dock="Top" Margin="0,0,0,10">
                <Button x:Name="btnClearFile" Click="btnRemoveFiles_Click"  Margin="0,0,10,0" Content="Quitar ficheros"/>
                <Button x:Name="btnOpenFile" Click="btnOpenFiles_Click"  Margin="0,0,10,0" Content="Seleccionar ficheros"/>
                <Button x:Name="btnJoinFile" Click="btnJoinFiles_Click" Margin="10,0,0,0" Content="Unir ficheros" IsEnabled="False"/>
            </WrapPanel>        
            <ListBox Name="lbFiles" />
        </DockPanel>
    </Grid>
</Window>
